<UserControl x:Class="PvzLauncherRemake.Controls.UserBigCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PvzLauncherRemake.Controls"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">
    <Grid>
        <Border x:Name="border" Opacity="0" Background="{DynamicResource BackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1.5" CornerRadius="5"/>
        <Grid x:Name="grid_Content" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <ScaleTransform x:Name="grid_Content_ScaleTransform"/>
            </Grid.RenderTransform>
            
            <!--图标-->
            <Viewbox x:Name="viewbox_Icon" Width="50" Height="50" HorizontalAlignment="Left" Margin="10">
            </Viewbox>
            <ui:PathIcon x:Name="pathicon_Left" Visibility="Hidden" Height="50" Width="50" Data="M400-240 160-480l240-240 56 58-142 142h486v80H314l142 142-56 58Z" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,10,10"/>

            <!--标题-->
            <TextBlock x:Name="textblock_Title" Text="Title" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,10,10,10" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="textblock_Subtitle" Text="Subtitle" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,40,10,10" FontSize="14"/>


            <!--箭头-->
            <ui:PathIcon x:Name="pathIcon_Arrow" Width="25" Height="25" Data="m560-240-56-58 142-142H160v-80h486L504-662l56-58 240 240-240 240Z" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20"/>
        </Grid>

        <!--点击触发器-->
        <Rectangle x:Name="rect_MouseTrigger" Fill="Transparent"
                   MouseEnter="rect_MouseTrigger_MouseEnter"
                   MouseLeave="rect_MouseTrigger_MouseLeave"
                   MouseDown="rect_MouseTrigger_MouseDown"
                   MouseUp="rect_MouseTrigger_MouseUp"/>
    </Grid>
</UserControl>
